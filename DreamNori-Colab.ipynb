# [5] AI í…Œë§ˆ ë¶„ì„ ë¡œì§
def analyze_theme_color(title, sys_prompt):
    try:
        response = client.chat.completions.create(
            model="gpt-4o",
            messages=[{
                "role": "system",
                "content": "ë„ˆëŠ” ì›¹ ë””ìì¸ ì „ë¬¸ê°€ì•¼. ì„¸ì…˜ ì„¤ì •ì— ì–´ìš¸ë¦¬ëŠ” í…Œë§ˆ ìƒ‰ìƒì„ ê³¨ë¼ì¤˜. ëª¨ë“  UI í…ìŠ¤íŠ¸ëŠ” ê²€ì€ìƒ‰ì´ì•¼. JSON í˜•ì‹ìœ¼ë¡œ ë‹µë³€í•´: {\"bg\": \"ë°°ê²½ìƒ‰\", \"panel\": \"íŒ¨ë„ìƒ‰\", \"accent\": \"ê°•ì¡°ìƒ‰\"}"
            }, {
                "role": "user",
                "content": f"ì œëª©: {title}\nì„¤ì •: {sys_prompt}"
            }],
            response_format={ "type": "json_object" }
        )
        palette = json.loads(response.choices[0].message.content)
        default = {"bg": "#ffffff", "panel": "#f1f3f5", "accent": "#e91e63"}
        default.update(palette)
        return default
    except:
        return {"bg": "#ffffff", "panel": "#f1f3f5", "accent": "#e91e63"}

